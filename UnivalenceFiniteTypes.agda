-- Univalence

swap₊ : {A B : Set} → A ⊎ B → B ⊎ A
swap₊ (inj₁ a) = inj₂ a
swap₊ (inj₂ b) = inj₁ b

swapswap : swap₊ ∘ swap₊ ∼ id
swapswap (inj₁ a) = refl a
swapswap (inj₂ b) = refl b

swap₊equiv : {A B : Set} → (A ⊎ B) ≃ (B ⊎ A)
swap₊equiv = (swap₊ , equiv₁ (mkqinv swap₊ swapswap swapswap))

